{
  "name": "sugarsmart-platform",
  "version": "1.0.0",
  "private": true,
  "description": "智糖管家AI - 糖尿病营养管理平台 (Monorepo)",
  "scripts": {
    "dev:web": "pnpm --filter @sugarsmart/web dev",
    "dev:app": "pnpm --filter @sugarsmart/mobile dev",
    "dev:backend": "pnpm --filter @sugarsmart/backend dev",
    "build:web": "pnpm --filter @sugarsmart/web build",
    "build:app": "pnpm --filter @sugarsmart/mobile build",
    "build:backend": "pnpm --filter @sugarsmart/backend build",
    "build:shared": "pnpm --filter @sugarsmart/shared build",
    "build:all": "pnpm -r build",
    "preview:web": "pnpm --filter @sugarsmart/web preview",
    "sync:app": "pnpm --filter @sugarsmart/mobile cap:sync",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "turbo": "^2.2.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
